#!/usr/bin/env python3
"""
ui-cli wrapper script - Development mode.

This script allows running ui-cli without installation.
For production, install with: pip install -e .
"""

import sys
import os

# Add project root to path
project_root = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_root)

# Import and run main
from src.main import main

if __name__ == "__main__":
    main()